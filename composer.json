{
    "name": "abdullahi/workflow",
    "description": "A simple php workflow",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Abdullahi\\Workflow\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Abdullahi Jimoh",
            "email": "abdullahij951@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^8.0",
        "symfony/yaml": "^6.0",
        "tightenco/collect": "^9.12"
    },
    "require-dev": {
        "spatie/ray": "^1.34",
        "pestphp/pest": "^1.21",
        "phpstan/phpstan": "^1.6"
    },
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "pest": "./vendor/bin/pest",
        "phpstan": "./vendor/bin/phpstan"
    }
}
